html
    head
        meta(charset="utf-8")
        title dashboard
        each val in ["/CSS/bootstrap.min.css","https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css","/CSS/dashboard.css","https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.9.3/Chart.min.css"]
            link(rel="stylesheet" href=val)
    body
        nav.navbar.navbar-dark.bg-dark
            a(class="navbar-brand" href="#") #[span.red r] #[span.blue e] #[span.green x] dashboard
            .form-inline.d-flex
                .dropdown
                    a(class="dropdown-toggle" href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false")
                        img(src="/images/Ellipse_1@2x.png" alt="icon" class="userImage")
                   
                    form(action="logout" method="POST" class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdownMenuLink")
                        a(class="dropdown-item" href="profile-edit") edit profile
                        a(class="dropdown-item" href="signin") log out
              
        .row
            .col-lg-1.sidebar 

            .col-lg-11
                .move
                    .row.perf   
                            canvas(id="per" style="width:100%; height:100%")
                    .row.up
                        .col-3.daily
                            canvas(id="day" style="width:100%; height:100%")
                        .col-3.tasks
                            h1 Tasks
                            //-label(for="task") task
                                input(type="checkbox" checked)//    
                        .col-3.com-tasks
                            canvas(id="TaskC" style="width:100%; height:100%")  
                        .row.up-table    
                            table.table-style
                                thead
                                    each val in ["id","username","countries","cities","emails"]
                                        th.header.line=val
                                tbody
                                    for val in userData 
                                        tr
                                            td.header.line=val.id
                                            td.header.line=val.username
                                            td.header.line=val.country
                                            td.header.line=val.City
                                            td.header.line=val.email
        each val in ["/JS/jquery-3.4.1.min.js" , "/JS/bootstrap.min.js", "https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.9.3/Chart.bundle.js","https://cdn.jsdelivr.net/npm/chartjs-plugin-datalabels", "/JS/charts.js"]
             script(src=val)     
